# Backend API Configuration
BACKEND_API_URL=http://localhost:8000
BACKEND_API_KEY=your-backend-api-key

# Application Settings
SECRET_KEY=your-frontend-secret-key
DEBUG=true
ENVIRONMENT=development

# Frontend Configuration
SITE_TITLE=Indie Comments Widget
SITE_DESCRIPTION=Privacy-focused comments for any website
SITE_URL=http://localhost:3000

# Widget Settings
WIDGET_THEMES=default,dark,neon,matrix,ocean,forest,sunset,geometric
DEFAULT_WIDGET_THEME=default
WIDGET_MAX_DEPTH=5
WIDGET_COMMENTS_PER_PAGE=50
WIDGET_ENABLE_REPLIES=true
WIDGET_SHOW_THEME_SELECTOR=true

# Authentication
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
SESSION_COOKIE_NAME=session_id
SESSION_MAX_AGE=86400

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# External Services
ANALYTICS_ID=your-analytics-id
SENTRY_DSN=your-sentry-dsn

# Security
CSP_DEFAULT_SRC=self
CSP_SCRIPT_SRC=self 'unsafe-inline' https://cdn.jsdelivr.net
CSP_STYLE_SRC=self 'unsafe-inline' https://cdn.jsdelivr.net https://fonts.googleapis.com
CSP_FONT_SRC=https://fonts.gstatic.com
CSP_IMG_SRC=self data: https:

# Performance
CACHE_STATIC_FILES=true
COMPRESS_RESPONSES=true
ENABLE_CDN=true

# Development
HOT_RELOAD=true
SOURCE_MAPS=true
DEBUG_LOGGING=true

# Admin Settings
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password
ADMIN_EMAIL=admin@your-domain.com